{
    "name": "hexlet/code",
    "description": "5 console math games",
    "type": "project",
    "license": "MIT",
    "require": {
        "wp-cli/php-cli-tools": "^0.12.4"
    },
    "bin": [
        "bin/brain-games",
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-gcd",
        "bin/brain-progression",
        "bin/brain-prime"
    ],
    "scripts": {
        "phpcs": "phpcs"
    },
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/Engine.php",
            "src/Games/gcd.php",
            "src/Games/even.php",
            "src/Games/calc.php",
            "src/Games/prime.php",
            "src/Games/progression.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*"
    }
}
